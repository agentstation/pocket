{
  "permissions": {
    "allow": [
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:github.com)",
      "Bash(go mod init:*)",
      "Bash(mkdir:*)",
      "Bash(go test:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(go get:*)",
      "Bash(go run:*)",
      "Bash(go mod:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git tag:*)",
      "WebFetch(domain:golangci-lint.run)",
      "Bash(rm:*)",
      "Bash(grep:*)",
      "Bash(golangci-lint run:*)",
      "Bash(gofmt:*)",
      "WebFetch(domain:pkg.go.dev)",
      "WebFetch(domain:api.github.com)",
      "Bash(go build:*)",
      "Bash(gh repo view:*)",
      "Bash(cp:*)",
      "Bash(make lint:*)",
      "Bash(make test:*)",
      "Bash(go list:*)",
      "Bash(./bin/pocket run:*)",
      "Bash(make:*)",
      "Bash(./bin/pocket:*)",
      "Bash(./pocket run:*)",
      "Bash(./pocket:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(sed:*)",
      "Bash(goimports:*)",
      "Bash(./scripts/go-format-hook.sh:*)",
      "Bash(./scripts/debug-hook.sh:*)",
      "Bash(chmod:*)",
      "Bash(cat:*)",
      "Bash(tee:*)",
      "Bash(godot:*)",
      "Bash(go doc:*)",
      "Bash(go vet:*)",
      "Bash(git checkout:*)",
      "Bash(mv:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/go-format-hook.sh"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/go-format-hook.sh"
          }
        ]
      },
      {
        "matcher": "MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/go-format-hook.sh"
          }
        ]
      }
    ]
  }
}